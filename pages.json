  "tabBar": {
    "color": "#7A7E83",
    "selectedColor": "#007AFF",
    "borderStyle": "#939393",
    "backgroundColor": "rgba(255, 255, 255, .3)",
    "list": [
      {
        "pagePath": "pages/home/home",
        "iconPath": "static/img/tabbar/home.svg",
        "selectedIconPath": "static/img/tabbar/home_active.svg",
        "text": "首页"
      },
      {
        "pagePath": "pages/source/source",
        "iconPath": "static/img/tabbar/source.svg",
        "selectedIconPath": "static/img/tabbar/source_active.svg",
        "text": "货源"
      },
      {
        "pagePath": "pages/price/price",
        "iconPath": "static/img/tabbar/price.svg",
        "selectedIconPath": "static/img/tabbar/price_active.svg",
        "text": "行情"
      },
      {
        "pagePath": "pages/mine/mine",
        "iconPath": "static/img/tabbar/mine.svg",
        "selectedIconPath": "static/img/tabbar/mine_active.svg",
        "text": "我的"
      }
    ],
    "midButton": {
      "width": "70px",
      "height": "45px",
      "iconPath": "static/img/tabbar/publish.png",
      "iconWidth": "26px",
      "backgroundImage": "",
      "text": "发布"
    }
